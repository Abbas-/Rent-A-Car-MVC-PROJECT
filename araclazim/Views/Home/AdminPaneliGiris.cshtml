
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login Form</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">


    <link rel="stylesheet" href="~/AdminLogin/styleAdminLogin.css">


</head>
<body>
    <div class="login">
        <h2 align="center">ADMİN PANELİNE HOŞ GELDİNİZ</h2>
        @using (Html.BeginForm("AdminControl", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <fieldset>
                <input type="text" name="AdminKadi" placeholder="Kullanıcı Adı" />
                <input type="password" name="Adminsifre" placeholder="Şifre" />
            </fieldset>
            <input type="submit" value="Giriş Yap" />
        }
    </div>


</body>
</html>
