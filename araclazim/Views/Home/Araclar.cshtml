@model Tuple<List<Araclar>, List<Musteri>, List<Model>, List<Marka>>
@{
//ViewBag.Title = "Araclar";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">

</head>
<body>


    <form name="Iletisim" method="post" align="center">
        <table width="93%" border="0" align="center" cellpadding="0" cellspacing="0">
            <td width="100%" class="IcerikYazi">
                <table width="100%" border="0" align="center" cellpadding="0" cellspacing="0">
                    <tr>
                        <td height="25" class="HizmetBaslik">
                            <strong>
                                &nbsp;
                                REZERVASYON
                            </strong>
                        </td>
                    </tr>
                    <tr>
                        <td height="25" class="HizmetBaslik">
                            <p>
                                <strong>
                                    &nbsp;
                                    <span class="InsanKaynaklari">
                                        Aşağıda sistem bilgilerinizi girerek ön rezervasyon yaptırabilirsiniz.<br>
                                    </span>&nbsp; <span class="InsanKaynaklari"><span style="text-align: left;"><span style="color: #FF0000">*</span> ile işaretlenmiş alanların doldurulması zorunludur.</span></span>
                                </strong>
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td height="7" class="IcerikYazi" style="padding-left:10px;padding-top:10px;padding-right:10px;padding-Bottom:10px"></td>
                    </tr>
                </table>
                <table border="0" width="100%" align="center" cellpadding="0" cellspacing="0" style="font-weight: bold; font-size: 12px; font-family: Arial; height: 35px;">

                    <tbody>
                        <tr>
                            <td colspan="3" valign="middle" bgcolor="#f5f5f5" style="height: 30px; text-align: center; border-bottom: 1px solid rgb(102, 102, 102);">Kullanıcı Bilgileriniz</td>
                        </tr>

                        @using (Html.BeginForm("istekControl", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                        {

                        }


                        @{
                            foreach (var Arac in Model.Item1)
                            {
                                using (Html.BeginForm("istekControl", "Home", FormMethod.Post, new { @class = "form-horizontal" }))
                                {
                                    
                                    <tr>
                                        <td style="text-align: right;" width="200"><span style="color: #FF0000; font-size: 16px"> </span>  Kullanıcı Adı :</td>
                                        <td style="height: 10px;" colspan="2"><input id="kullanıcıAdı" name="kulAd" type="text" required></td>
                                    </tr>
                                    
                                    <tr>
                                        <td style="text-align: right;" width="200"><span style="color: #FF0000; font-size: 16px"> </span>  Şifre :</td>
                                        <td style="height: 10px;" colspan="2"><input id="kullanıcıAdı" name="sifre" type="text" required></td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" valign="middle" bgcolor="#f5f5f5" style="height: 5px; text-align: center; border-bottom: 1px solid rgb(102, 102, 102);"></td>
                                    </tr>
                                    <tr hidden>
                                        <td style="text-align: right;" width="200"><span style="color: #FF0000; font-size: 16px"> </span>  Aracın idsi :</td>
                                        <td style="height: 10px;" colspan="2">
                                            <label id="gunluk_ucret" name="arac_id_label" type="text" value="">@Arac.Id</label>
                                            <input id="kullanıcıAdı" name="arac_id" type="text" value="@Arac.Id" hidden>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: right;" width="200"><span style="color: #FF0000; font-size: 16px"> </span>  Aracın Markası :</td>
                                        <td style="height: 10px;" colspan="2"><label id="gunluk_ucret" name="marka_model" type="text" value="">@Arac.modelId.markaId.marka @Arac.modelId.model</label></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align: right;" width="200"><span style="color: #FF0000; font-size: 16px"> </span>  Günlük Ücret:</td>
                                        <td style="height: 10px;" colspan="2">
                                            <label id="gunluk_ucret" name="gunluk_ucret_label" type="text" value="">@Arac.gunlukUcret ₺</label>
                                            <input id="kullanıcıAdı" name="gunluk_ucret" type="text" value="@Arac.gunlukUcret" hidden>
                                        </td>
                                    </tr>
                                        <tr>
                                            <td style="text-align: right;" width="200"><span style="color: #FF0000; font-size: 16px"> </span>  Kasa Tipi:</td>
                                            <td style="height: 10px;" colspan="2"><label id="gunluk_ucret" name="kasa_tipi" type="text" value="">@Arac.kasaTipi</label></td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: right;" width="200"><span style="color: #FF0000; font-size: 16px"> </span>  Yıl:</td>
                                            <td style="height: 10px;" colspan="2"><label id="gunluk_ucret" name="yil" type="text" value="">@Arac.yil</label></td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: right;" width="200"><span style="color: #FF0000; font-size: 16px"> </span>  Renk:</td>
                                            <td style="height: 10px;" colspan="2"><label id="gunluk_ucret" name="renk" type="text" value="">@Arac.renk</label></td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: right;" width="200"><span style="color: #FF0000; font-size: 16px"> </span>  Silindir:</td>
                                            <td style="height: 10px;" colspan="2"><label id="gunluk_ucret" name="silindir_hacmi" type="text" value="">@Arac.silindirHacmi</label></td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: right;" width="200"><span style="color: #FF0000; font-size: 16px"> </span>  Yakıt Tipi:</td>
                                            <td style="height: 10px;" colspan="2"><label id="gunluk_ucret" name="yakit_tipi" type="text" value="">@Arac.yakitTipi</label></td>
                                        </tr>


                                        <tr>
                                            <td style="text-align: right;" width="200"></td>
                                            <td width="236"></td>
                                            <td width="132"></td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: right;" bgcolor="#f5f5f5" width="200"><span style="color: #FF0000; font-size: 16px">*</span>  Planlanan Araç Alış Günü:</td>
                                            <td style="height: 20px;" colspan="2" bgcolor="#f5f5f5">
                                                <select id="Arac_Alis_Gun" name="Arac_Alis_Gun">
                                                    @for (int i = 1; i <= 31; i++)
                                                    {
                                                        <option>@i</option>
                                                    }
                                                </select>
                                                <select id="Arac_Alis_Ay" name="Arac_Alis_Ay">
                                                    @for (int i = 1; i <= 12; i++)
                                                    {
                                                        <option>@i</option>
                                                    }
                                                </select>
                                                <select id="Arac_Alis_Yil" name="Arac_Alis_Yil">
                                                    <option value="2016" selected>2016</option>
                                                    <option value="2017">2017</option>
                                                    <option value="2018">2018</option>
                                                    <option value="2019">2019</option>
                                                </select>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="text-align: right;" bgcolor="#f5f5f5" width="200"><span style="color: #FF0000; font-size: 16px">*</span>  Planlanan Araç Teslim Günü:</td>
                                            <td style="height: 20px;" colspan="2" bgcolor="#f5f5f5">
                                                <select id="Arac_Teslim_Gun" name="Arac_Teslim_Gun">
                                                    @for (int i = 1; i <= 31; i++)
                                                    {
                                                        <option>@i</option>
                                                    }
                                                </select>
                                                <select id="Arac_Teslim_Ay" name="Arac_Teslim_Ay">
                                                    @for (int i = 1; i <= 12; i++)
                                                    {
                                                        <option>@i</option>
                                                    }
                                                </select>
                                                <select id="Arac_Teslim_Yil" name="Arac_Teslim_Yil">
                                                    <option value="2016" selected>2016</option>
                                                    <option value="2017">2017</option>
                                                    <option value="2018">2018</option>
                                                    <option value="2019">2019</option>
                                                </select>
                                            </td>
                                        </tr>



                                        <tr>
                                            <td style="text-align: right;" width="200"></td>
                                            <td style="height: 10px;" colspan="2">
                                                <input id="submit" style="width: 120px; background-color: rgb(51, 51, 51); color: rgb(239, 239, 239);" name="btn_submit" value="İsteği Gönder" type="submit">

                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="3" valign="middle" bgcolor="#efefef" style="height: 10px; text-align: center; border-bottom: 1px solid rgb(102, 102, 102);"></td>
                                        </tr>
                                    }
                                }
                        }



                </table>
    </form>

</body>
</html>
